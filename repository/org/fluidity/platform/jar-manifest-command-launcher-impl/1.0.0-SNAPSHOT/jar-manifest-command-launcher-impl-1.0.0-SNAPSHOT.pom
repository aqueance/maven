<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.fluidity.platform</groupId>
        <artifactId>features</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>jar-manifest-command-launcher-impl</artifactId>
    <packaging>jar</packaging>
    <name>Fluid Tools: Command Line Manifest</name>

    <licenses>
        <license>
            <name>Apache License 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <profiles>

        <profile>
            <id>excluded-dependencies</id>
            <activation><property><name>!package-exclude</name></property></activation>

            <dependencies>

                <dependency>
                    <groupId>${fluidity.groupId}</groupId>
                    <artifactId>manifest-handler-api</artifactId>
                    <version>${project.version}</version>
                    <scope>provided</scope> <!-- provided by the invoking standalone-jar plugin -->
                </dependency>

                <dependency>
                    <groupId>${fluidity.groupId}</groupId>
                    <artifactId>cli-bootstrap</artifactId>
                    <version>${project.version}</version>
                </dependency>

            </dependencies>
        </profile>

        <profile>
            <id>unpacked-dependencies</id>
            <activation><property><name>!package-unpack</name></property></activation>

            <dependencies>

                <dependency>
                    <groupId>${fluidity.groupId}</groupId>
                    <artifactId>foundation-utils</artifactId>
                    <version>${project.version}</version>
                </dependency>

            </dependencies>
        </profile>

    </profiles>

    <build>
        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-testCompile</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-test</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
</project>
